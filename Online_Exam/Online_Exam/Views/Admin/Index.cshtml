@model IEnumerable<Online_Exam.Models.Exams>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

    <head>
    <meta name="viewport" content="width=device-width , intial-scale=1.0">
    </head>
<body>
   
<div class="card" style="width: 1100px;background-color:#EBF8FC">
    <div class="card" style="width:1100px ; background-color:#EBF8FC ; height:900px ">
        <h5 class="card-title" style="padding:15px ; color:#286575 ; font-weight:bold">Admin Panel</h5>
        <div class="row">
            <ul style="list-style-type: none; padding: 0; margin: 0;">
                <li style="display: inline-block; margin-right: 10px; margin-left:30px">
                     
                    <a asp-area="" asp-controller="Admin" asp-action="Index" class="card-link" style=" color: #286575; font-weight: bolder;">Group</a>
                </li>

                <li style="display: inline-block; margin-right: 10px;">
                    <a asp-area="" asp-controller="Admin" asp-action="Users" class="card-link" style="text-decoration: none; color: #286575; font-weight: bolder;">Users</a>
                </li>
                <li style="display: inline-block;">
                    <a asp-area="" asp-controller="Admin" asp-action="Students" class="card-link" style="text-decoration: none; color: #286575; font-weight: bolder;">Students</a>
                </li>
            </ul>
        </div>


        
        
        <div class="card" style="width: 1030px; margin-left:35px;margin-top:30px ; height:730px; background-color:#FFFFFF ">
            <div class="card-body">
              <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="NewGroupLogin"> 
                  <button style="border:none ;border-radius:14px ; color:#ffffff;width:120px ;font-size:larger ; font-weight:650 ;background-color:#286575 ">  Create  </button></a>
            
                <div class="card" style="width: 980px ;background-color:#EBF8FC ;margin-left:10px; margin-top:30px ; height:550px">
                    <div class="card-body" >
                        
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col" style="background-color:#286575;color:white">Id</th>
                                    <th scope="col" style="background-color:#286575;color:white">Title</th>
                                    <th scope="col" style="background-color:#286575;color:white">Description</th>
                                    <th scope="col" style="background-color:#286575;color:white">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                    @foreach(Exams grp in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => grp.Id)</td>
                                            <td>@Html.DisplayFor(modelItem => grp.Title)</td>
                                            <td>@Html.DisplayFor(modelItem => grp.Description)</td>
                                            <td>
                                                    <a asp-action="EditEmployee" asp-route-id="@grp.Id">Edit</a>
                                                <a asp-action="DeleteEmployee" asp-route-id="@grp.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            
                            <!--<tbody>
                                <tr class="table-active">
                                    <th scope="row">1</th>
                                    <td>table-active</td>
                                </tr>
                            </tbody>-->
                        </table>
                        
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
</body>
</html>



