
@{
    ViewData["Title"] = "Update";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="register.css">
    <style>
        .textbox {
            width: 300px;
            padding-bottom: 10px;
            height: 30px;
            border: 1px solid #ccc;
            border-radius: 30px;
            outline: none;
            font-size: 16px;
        }

        .register-form {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 60px;
            width: 400px;
            border-color: #286575;
            border: 2px solid #286575;
            max-width: 700px;
            margin: auto;
            background: #EBF8FC;
            margin-top: 20px; /* Add top margin as needed */
        }

        h2 {
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        .form-group {
            margin-bottom: 10px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"] {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            width: 100%;
            box-sizing: border-box;
        }

        button {
            padding: 5px;
            padding-left: 5px;
            background-color: #286575;
            color: #fff;
            border: none;
            border-radius: 14px;
            width: 130px;
            cursor: pointer;
            font-size: larger;
            font-weight: 650;
            align-content: center;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #fff;
                color: black;
            }

            button:focus {
                outline: none;
            }
    </style>
</head>

<body>
    <div class="register-form">
        <h2>Update Profile</h2>
        <form>
            <div class="form-group">
                <label>Name</label>
                <input class="textbox" type="text" id="name" name="name" required />
            </div>
            <div class="form-group">
                <label>Username</label>
                <input class="textbox" type="text" id="username" name="username" required />
            </div>

            <div class="form-group">
                <label>Contact</label>
                <input class="textbox" type="text" id="password" name="password" required />
            </div>
            <br>
            <button type="submit">Update</button>
        </form>
    </div>
</body>
</html>


