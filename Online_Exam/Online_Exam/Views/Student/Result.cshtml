@model IEnumerable<Online_Exam.Models.ExamResults>

@{
    ViewData["Title"] = "Result";
}

<!DOCTYPE html>
<html lang="en">
<div class="card" style="width: 1100px;background-color:#EBF8FC">
    <div class="card" style="width:1100px ; background-color:#EBF8FC ; height:500px ">
        <h5 class="card-title" style="padding:15px ; color:#286575 ; font-weight:bold">Student Panel</h5>
        <div class="row">
            <ul style="list-style-type: none; padding: 0; margin: 0;">
                <li style="display: inline-block; margin-right: 10px; margin-left:30px">

                    <a asp-area="" asp-controller="Student" asp-action="Index" class="card-link" style="text-decoration: none; color: #286575; font-weight: bolder;">Attend Exam</a>
                </li>

                <li style="display: inline-block; margin-right: 10px;">
                    <a asp-area="" asp-controller="student" asp-action="Result" class="card-link" style=" color: #286575; font-weight: bolder;">Result</a>
                </li>
                <li style="display: inline-block;">
                    <a asp-area="" asp-controller="Student" asp-action="Profile" class="card-link" style="text-decoration: none; color: #286575; font-weight: bolder;">Profile</a>
                </li>
            </ul>
        </div>




        <div class="card" style="width: 1030px; margin-left:35px;margin-top:30px ; height:360px; background-color:#FFFFFF ">
            <div class="card-body">
                <h5 class="card-title" style="padding:10px ; color:#286575 ; font-weight:bold">Asp.net Core</h5>

                <div class="card" style="width: 980px;background-color:#EBF8FC ;margin-left:10px; margin-top:30px ; height:250px">
                    <div class="card-body">

                        <table class="table">
                            <thread>
                                <th scope="col" style="background-color:#286575;color:white">Exam Name</th>
                                <th scope="col" style="background-color:#286575;color:white">Total Question</th>
                                <th scope="col" style="background-color:#286575;color:white">Correct</th>
                            </thread>
                            <tbody>
                                @foreach (ExamResults grp in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => grp.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => grp.ExamName)</td>
                                        <td>@Html.DisplayFor(modelItem => grp.TotalQuestion)</td>
                                        <td>@Html.DisplayFor(modelItem => grp.Correct)</td>
                                        <td>
                                            <a asp-action="EditEmployee" asp-route-id="@grp.Id">Edit</a>
                                            <a asp-action="DeleteEmployee" asp-route-id="@grp.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <!--<tbody>
                                <tr class="table-active">
                                    <th scope="row">1</th>
                                    <td>table-active</td>
                                </tr>
                            </tbody>-->
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
</html>


